<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:hint="sensitive data"
        android:layout_alignTop="@+id/src_bookmark_button"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="LocalTest"
        android:id="@+id/test0_button"
        android:onClick="onClick_test"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="IpcTest"
        android:id="@+id/test1_button"
        android:onClick="onClick_test"
        android:layout_below="@+id/test0_button"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="FileTest"
        android:id="@+id/test2_button2"
        android:onClick="onClick_test"
        android:layout_below="@+id/test1_button"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Get Contact"
        android:id="@+id/src_contact_button"
        android:onClick="onClick_src"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/test0_button"
        android:layout_marginBottom="137dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Get Bookmark"
        android:id="@+id/src_bookmark_button"
        android:onClick="onClick_src"
        android:layout_above="@+id/src_contact_button"
        android:layout_alignLeft="@+id/test0_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Leak data"
        android:id="@+id/sink_button"
        android:onClick="onClick_sink"
        android:layout_alignTop="@+id/src_contact_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp" />

</RelativeLayout>
